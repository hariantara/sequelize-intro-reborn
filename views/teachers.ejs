<!DOCTYPE html>
<html>

<head>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 50%;
    }

    td,
    th {
      border: 1px solid #dddddd;
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <title>Teachers</title>
</head>

<body>
  <center>
    <!-- <%= JSON.stringify(teacherData, null, 2)%> -->
    <h1>Teachers Info Table</h1>
    <br><br>
    <td><a href="/home"><button type="Submit" name="">Home</button></a></td>
    <td><a href="/teachers/add"><button type="Submit" name="">Add Data Teacher</button></a></td>
    <br><br>
    <table>
      <tr>
        <th>No</th>
        <th>Teacher Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th colspan="2">Options</th>
      </tr>
      <% var number = 0 %>
      <% teacherData.forEach(teacher =>{ %>
      <tr>
        <td><%= number+=1 %></td>
        <td><%= teacher.id %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.email %></td>

            <% if(teacher.SubjectId == undefined ){%>
              <td>Unassigned</td>
            <%}else{%>
              <td><%= teacher.Subject.subject_name %></td>
            <% } %>

        <td><a href="/teachers/edit/<%=teacher.id%>"><button type="Submit" name="">Edit</button></a></td>
        <td><a href="/teachers/delete/<%=teacher.id%>"><button type="Submit" name="">Delete</button></a></td>
      </tr>
      <% }) %>
    </table>
  </center>
</body>

</html>
